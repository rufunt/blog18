<p>Редактировать: </p>


<%= form_for :article, url: article_path(@article), method: :patch do |f| %>
  
  <div>

    <%= f.label :Название %></br>  
    <%= f.text_field :title %>
    
  </div><br>
 
  <div>

    <%= f.label :Содержание %> </br>
    <%= f.text_area :text %>
    
  </div>

  <p><%= f.submit %></p>

<% end %>